<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fanbin.cordovaDemo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="hdpi" src="res/icon/android/icon.png" />
    <icon density="ldpi" src="res/icon/android/icon.png" />
    <icon density="mdpi" src="res/icon/android/icon.png" />
    <icon density="xhdpi" src="res/icon/android/icon.png" />
    <splash density="port-hdpi" src="res/screen/android/Default-736h@3x.png" />
    <splash density="port-ldpi" src="res/screen/android/Default-667h@2x.png" />
    <splash density="port-mdpi" src="res/screen/android/Default-667h@2x.png" />
    <splash density="port-xhdpi" src="res/screen/android/Default-736h@3x.png" />
    <name>CordovaDemo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="1000" />
</widget>
